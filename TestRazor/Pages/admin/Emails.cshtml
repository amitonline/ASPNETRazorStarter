@page
@model TestRazor.Pages.admin.EmailsModel
@{
    ViewData["Title"] = "Emails List";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">BROWSE EMAIL IDS</h3>
                </div>
                <div class="panel-body ">
                    <div class="row">
                        <div class="col-md-6 offset-md-3 text-center">
                            <button type=button onclick="window.location='/admin/Logout';"
                                    class="btn btn-sm btn-secondary mr-2">
                                Logout
                            </button>
                            <button type=button onclick="window.location='/admin/Dashboard';"
                                    class="btn btn-sm btn-secondary">
                                Dashboard
                            </button>
                        </div>
                    </div>
                </div> <!--panel-body-->
            </div> <!--panel-->
        </div> <!--col-md-6-->
    </div>	<!--row-->

            <div class="row mt-4">
                <div class="col-md-6 offset-md-3 text-center">
                    <form name=frmEmail id=frmEmail onsubmit="return doValidate(this);">
                        <div class="row">
                            <input type=hidden name=p id=p value="@ViewData["p"]>">

                            <div class="col-md-6">
                                <input name=xemailid id=xemailid class="form-control" maxlength=75
                                       placeholder="Emailid " value="@ViewData["emailId"]">
                            </div>
                            <div class="col-sm-3 text-left">
                                <button class="btn btn-default">Submit</button>
                            </div>

                        </div>
                    </form>
                    <div class="panel panel-default mt-2">
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th class="col-sm-5">Email (@ViewData["count"])</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow dr in (ViewData["data"] as System.Data.DataTable).Rows)
                                    {
                                    <tr>
                                        <td>
                                            <div class="col-sm-5 text-left">
                                                @dr["email"]
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="col-sm-12 text-right">
                                @Html.Raw(@ViewData["pageLinks"])
                            </div>
                        </div> <!--panel-body-->
                    </div> <!--panel-->

              </div> <!--col-md-6-->
            </div> <!--row-->
    </div> <!--container-->

@section ExtraScripts{
    <script src="~/js/admin-emails.js"></script>
}
